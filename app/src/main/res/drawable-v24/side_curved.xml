<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="@color/colorPrimaryWhite" />
            <corners android:topLeftRadius="50dp"
                android:bottomLeftRadius="50dp"
                />
        </shape>
    </item>
    <item android:right="0dp"
        android:top="1dp"
        android:left="1dp"
        android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#FF1A144C"
                android:centerColor="#FF3E1F5E"
                android:endColor="#FF482D84"
                android:type="linear"
                android:angle="180"/>
            <corners android:topLeftRadius="50dp"
                android:bottomLeftRadius="50dp"
                />
        </shape>
    </item>
</layer-list>