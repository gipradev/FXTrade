        android:top="0dp"
        android:left="0dp"
        android:bottom="3dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/>
            <corners android:bottomLeftRadius="0dp"
                android:bottomRightRadius="150dp"

                />
        </shape>
    </item>
</layer-list>